            <string>////////////BASIC ENEMY CODE////////////
//It walks, changes direction when in contact with wall and recieves damage
//Les puse comentarios para que le puedan ennder y modificar/hacer otros
//perdon si esta un poco espaguetti o confuso, segun yo esta aceptable
//asegurense de agarrar tambien el cadigo de INSTANTIATE VARIABLES en el evento
//de "create" para que funcione el codigo de abajo, tmb el alarm 11, con eso se 
//habilita la muerte


hsp = move * movespeed;        // horizontal speed is direction * speed

if (vsp &lt; 10){  //Start adding gravity to vertical speed
    vsp += grav;
}

//Horizontal Collision 
if (place_meeting(x+hsp,y,obj_wall)){ 
    while(!place_meeting(x+sign(hsp),y,obj_wall)){ 
        x += sign(hsp); 
    } 
    hsp = 0; 
    
    move *= -1;  //change direction if collision
}   
x += hsp; //Add horizontal speed to current position

//Vertical Collision 
if (place_meeting(x,y+vsp,obj_wall)){ 
    while(!place_meeting(x,y+sign(vsp),obj_wall)){ 
        y += sign(vsp); 
    } 
    vsp = 0; 
    
    //Turn around on edges if fear of heights on
    if(fear_of_heights &amp;&amp; !position_meeting(x + (sprite_height/2) * move, y+(sprite_height/2) + 80, obj_wall)){
        hsp = 0; 
        move *= -1;
    }
} 
y += vsp;

//Manage player's attacks collision 
if(place_meeting(x,y,obj_mc_slash1)){
    alarm[0] = room_speed*0.05;     //run timer for taking damage
    taking_damage = 1;
    hp -= obj_mc_slash1.damage;
    //show_message("Total = " + string(hp));
}
if(place_meeting(x,y,obj_mc_slash2)){
    alarm[0] = room_speed*0.05;     //run timer for taking damage
    taking_damage = 1;
    hp -= obj_mc_slash2.damage;
    //show_message("Total = " + string(hp));
}
if(place_meeting(x,y,obj_mc_slash3)){
    alarm[0] = room_speed*0.05;     //run timer for taking damage
    taking_damage = 1;
    hp -= obj_mc_slash3.damage;
    //show_message("Total = " + string(hp));
}

if(taking_damage){ //if taking damage restict movement and color change
    image_blend = c_red;
    image_speed = 0;
    vsp = 0;
    movespeed = 0;
}else{
    image_blend = c_white;
    movespeed = initial_movespeed;
    image_speed = 0.1;
}

//Dead check
if(hp &lt;= 0){
    instance_destroy();
}
////////////BASIC ENEMY CODE////////////
